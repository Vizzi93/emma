# Test environment configuration
ENVIRONMENT=development
DEBUG=true

# Database - use in-memory SQLite for tests
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Security - test values only
SECRET_KEY=test-secret-key-for-unit-tests-only-32chars
JWT_SECRET_KEY=test-jwt-secret-key-for-unit-tests-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Agent configuration
AGENT_BINARY_BASE_URL=http://localhost:8000/agents
CONFIG_SIGNING_KEY_ID=test-key-id

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100
